<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VNNSIS</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>

    <link rel="stylesheet" href="~/css/font-awesome.css" /> <!--load all styles -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-image:linear-gradient(120deg, #89f7fe 0%, #66a6ff 100%); border-radius: 5px;">
            <div style="flex-wrap:wrap; display:flex; width: 100%; justify-content: space-between;">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/Logo/logo_nok.png" title="Logo" alt="LogoNOK" width="74.47" height="30">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    @if(@ViewBag.UserID == null)
                    {
                        @* <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-page="/Account/Register"><i class="fas fa-user-edit" style="margin-right:5px;"></i>Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-page="/Account/Login"><i class="fas fa-user-lock" style="margin-right:5px;"></i>Login</a>
                            </li>
                        </ul> *@
                    }
                    else
                    {
                        <a  class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index" style="background:darkcyan; border-radius:10px;">
                            <i class="fas fa-sign-out-alt" style="margin-right:5px"></i>Sign out
                        </a>
                        <span class="nav-link text-light">Hello! @ViewBag.UserID </span> 
                    }
                    <ul class="navbar-nav flex-grow-1" style="justify-content: space-between; user-select: none;">
                        <li class="nav-item">
                            <a class="nav-link" style="color: deepskyblue; font-size: 29px;padding: 0px; text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;" asp-area="" asp-controller="Home" asp-action="Index">
                                VNN SMART INFORMATION SYSTEM
                            </a>
                             
                        </li>
                        @if(@ViewBag.UserID == null)
                        {
                            <div class="divLineNo" onclick="ResetMachine()" style="cursor: pointer;" data-toggle="tooltip" title="Chọn line" >
                                <span class="spanLineNo" style="margin-right: 5px; margin-left: 5px;">Line </span>
                                <span id="LnID">...</span>
                            </div>
                        }
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <partial name="_CookieConsentPartial" />
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/js/font-awesome.js"></script>
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
